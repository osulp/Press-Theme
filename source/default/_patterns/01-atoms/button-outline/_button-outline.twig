{#
/**
 * @file
 * button-outline
 *
 * Available variables for button-outline:
 *  - button_outline.variable_name [variable_type]: Description of the variable. Example below.
 *  - button_outline.invert [bool]: When set, colors will be inverted for light display on dark background.
 */
#}

<div class="button-outline">
  <h1>button-outline</h1>
  <div>Do good work!</div>
  <div>Example scoped variable: <code>{{ button_outline.example_var }}</code></div>
</div>

{% set button_element = button.element|default('button') %}

{% set button_attributes =
  button_attributes
    |default({})
    |merge({
      type: button_element != 'a' ? 'button' : 'link'
    })
%}

{% set button_classes =
  [
    'py-2',
    'px-12',
    'text-black',
    'font-bold',
    'border-2',
    'border-stratosphere',
    button.color ? button.color : 'bg-transparent',
    button.hoverColor ? 'hover:' ~ button.hoverColor : 'hover:border-starcanvas'
  ]
    |merge(button_classes|default([]))
    |join(' ')
    |trim
%}

<{{button_element}} {{ button_attributes|attributify }} class="{{ button_classes }}">
  {{ button_outline.text }}
  {% block right %}
  {% endblock right %}
</{{button_element}}>